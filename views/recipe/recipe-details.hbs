<h2 class="h2">{{recipe.title}}</h2>

<p>Ingredients: {{recipe.ingredients}}</p>

<p>Instructions: {{recipe.instructions}}</p>

<img class="recipe-img {{_id}}" src="{{recipe.imageUrl}}" alt="{{recipe.title}}" />

<p>{{recipe.category}}</p>


<a href="/profile/{{recipe.owner._id}}">Go to the chefs profile</a>

<h4 class="textrecipedetails">Comments and tips</h4>
<form action='/recipe-details/{{_id}}' method='POST'>

  <textarea type='text' name='message'></textarea>

  <button class="submitButton" type="submit">Send comment</button>

</form>

{{#each recipe.comments}}

<h4>Author: {{owner.username}}</h4>

<p>{{message}}</p>

{{/each}}

{{#if isOwner}}
<a href="/edit-recipe/{{_id}}">
  <button class="editButton">
    Edit </button>
</a>

<form action="/recipe-details/{{_id}}/delete" method="POST">
  <button class="deleteButton" type="submit">Delete</button>
  </for

  {{/if}}