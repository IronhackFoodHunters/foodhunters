<nav>

<a href="/profile">Profile</a>
<a href="/search">Search</a>
<a href="/homepage">Homepage</a>

</nav>

<form action="/private/create-recipe/{{_id}}" method="POST" enctype="multipart/form-data">


{{#each recipe}}

<div class="">

<h2>{{title}}</h2>

<p>Ingredients: {{ingredients}}</p>

<p>Instructions: {{instructions}}</p>

<p>{{category}}</p>

<img class="recipe-img {{_id}}" src="{{imageUrl}}" alt="{{title}}" />

<a href="/profile/{{_id}}">See more</a>
</div>
{{/each}}
</form>

<h2>Leave your comments and tips</h2>
<form action='/recipe/recipe-details/{{recipe._id}}' method='POST'>

  <textarea type='text' name='comment'></textarea>

  <button type="submit">Send comment</button>

</form>

{{#if recipe.comments}}

{{#each room.reviews}}

  <h4>Author: {{this.user.username}}</h4>
  <h5>Author: {{this.user.email}}</h5>
  
  <p>Comment: </p>
  <p>{{this.comment}}</p>

{{/each}}
{{/if}}

<button type="submit">
    <a href="/profile/id/edit">Edit</a>
</button>

<button type="submit">
    <a href="/delete-recipe">Delete</a>
</button>