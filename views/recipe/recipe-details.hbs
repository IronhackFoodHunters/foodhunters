<section class="recipedetails">
<h2 class="h2">{{title}}</h2>

<p> <h3 class="userprofiletexth3">Ingredients</h3> {{ingredients}}</p>

<p> <h3 class="userprofiletexth3">Instructions </h3> {{instructions}}</p>

<img class="imagerecipe" class="recipe-img {{_id}}" src="{{imageUrl}}" width="200" height="200" alt="{{title}}" />

<p>{{category}}</p>


<a href="/profile/{{owner._id}}">Go to the chefs profile</a>

<h4 class="textrecipedetails">Comments and tips</h4>
<form action='/recipe-details/{{_id}}' method='POST'>

  <textarea type='text' name='message'></textarea>

  <br>
  <br>

  <button class="submitButton" type="submit">Send comment</button>

<br>
<br>

</form>

{{#each comments}}

<h4>Author: {{owner.username}}</h4>

<p>{{message}}</p>

{{/each}}

<a href="/edit-recipe/{{_id}}">
  <button class="editButton">
    Edit </button>
</a>

<br>
<br>

<form class="formrecipedetails" action="/recipe-details/{{_id}}/delete" method="POST">
  <button class="deleteButton" type="submit">Delete</button>
  </form>
  </section>