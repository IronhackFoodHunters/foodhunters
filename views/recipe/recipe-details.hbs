<section class="recipedetails">
<h2>{{recipe.title}}</h2>

<p> <h3 class="userprofiletexth3">Ingredients</h3> {{recipe.ingredients}}</p>

<p> <h3 class="userprofiletexth3">Instructions </h3> {{recipe.instructions}}</p>

<img class="imagerecipe" class="recipe-img {{_id}}" src="{{recipe.imageUrl}}" width="200" height="200" alt="{{recipe.title}}" />

<p>{{recipe.category}}</p>


<a href="/profile/{{recipe.owner._id}}">Go to the chefs profile</a>

<h4 class="textrecipedetails">Comments and tips</h4>
<form action='/recipe-details/{{_id}}' method='POST'>

  <textarea type='text' col="10" name='message'></textarea>

  <br>
  <br>

  <button class="submitButton" type="submit">Send comment</button>

<br>
<br>

</form>

{{#each recipe.comments}}

<h4>Author: {{owner.username}}</h4>

<p>{{message}}</p>

{{/each}}

{{#if isOwner}}
<a href="/edit-recipe/{{_id}}">
  <button class="editButton">
    Edit </button>
</a>

<br>
<br>

<form class="formrecipedetails" action="/recipe-details/{{_id}}/delete" method="POST">
  <button class="deleteButton" type="submit">Delete</button>
  </form>
  </section>

  {{/if}}
  