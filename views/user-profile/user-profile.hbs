{{#if user}}
<img src="{{user.imageUrl}}" width="200" height="200" alt="hi">
<h2 class="userprofiletexth2">{{user.username}}</h2>
<h3 class="emailprofile">{{user.email}}</h3>
<!---<p>{{user.description:}}</p>--->
<p class="userprofiletextP">{{user.foodPreferences}}</p>
<img class="user-img {{_id}}" src="{{imageUrl}}" alt="{{username}}" />
{{else}}
<p class="userprofiletextP">Still no logged in user, sorry!</p>
{{/if}}

{{#if isOwner}}
<button class="editprofilebuttonprofile"  type="submit">
  <a href="/auth/profile/{{_user.id}}edit">Edit Profile</a>
</button>

<button class="favouritesbuttonprofile" type="submit">
  <a href="/favourites">Favourites</a>
</button>

<button class="createrecipeprofile" type="submit">
  <a href="/private/create-recipe">Create recipe</a>
</button>

{{/if}}

<!--add created reciped here-->

{{#each reversedCreated}}
<h3 class="userprofiletexth3">{{title}}</h3>

<a href="/recipe-details/{{_id}}">
  <img src="{{imageUrl}}" width="200" height="200" alt="{{title}}" />
</a>

{{/each}}