<h2>New recipe</h2>
<form action="/private/create-recipe" method="POST" enctype="multipart/form-data">
    <label>Title
        <input type="text" name="title" placeholder="Name of recipe">
    </label>
    <br>

    <label>Ingredients
        <textarea type="text" name="ingredients" placeholder="Ingredients"></textarea>
    </label>
    <br>

    <label>Instructions
        <textarea type="text" name="instructions" placeholder="Instructions"></textarea>
    </label>
    

    <label for="category">Category <br>
        <select name="category" id="foodPreferences" multiple>
            <option value="omnivorous">Omnivorous</option>
            <option value="vegetarian">Vegetarian</option>
            <option value="vegan">Vegan</option>
            <option value="drinks">Drinks</option>
            <option value="mediterranean">Mediterranean</option>
            <option value="african">African</option>
            <option value="no carbs">No carbs</option>
            <option value="gluten free">Gluten free</option>
            <option value="Pescatarian"> Pescatarian</option>
            <option value="Sweets"> Sweets </option>
            <option value="Latinomerican"> Latinomerican</option>
            <option value="asian"> Asian</option>
        </select>
    </label>
    <br>

    <label>Image:
        <input type="file" name="imageUrl" />
    </label>

    <button type="submit">Create</button>
</form>