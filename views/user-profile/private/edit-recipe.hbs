<h2>Edit your recipe</h2>

<form action="/recipe-deatils/{{recipe._id}}/edit" method="POST">

    <label for="title"> Title:</label>
    <input type="text" name="title" value="{{recipe.title}}">

    <label for="ingredients"> Ingredients:</label>
    <input type="text" name="ingredients" value="{{recipe.ingredients}}">

    <label for="instructions"> Instructions:</label>
    <input type="text" name="instructions" value="{{recipe.instructions}}">

    <label for="category"></label>
    <select name="category" multiple>
        
    {{#each celebrities.celebrities}}
        <option value="{{_id}}">{{name}}</option>
    {{/each}}
    </select>

    <button type="submit">Edit</button>
    <br>
    <a href="/movies">Go back to movies</a>
</form>