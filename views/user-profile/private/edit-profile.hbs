<h2>Edit your profile</h2>

<form action="/profile/{{_user.id}}edit" method="POST">

  <label for="username"> Username:</label>
  <input type="text" name="title" value="{{user.username}}" />
 
  <br />
  <label for="email"> Email:</label>
  <input type="text" name="instructions" value="{{user.email}}" />
  <br />

  <br />
  <label for="password"> Password:</label>
  <input type="text" name="genre" value="{{user.password}}" />

  <br />
<p> would you like to eat? </p>

<select id="foodPreferences" multiple>
  <option label="omnivorous"> omnivorous</option>
  <option label="vegetarian"> vegetarian</option>
  <option label="vegan"> vegan</option>
  <option label="drinks"> drinks</option>
  <option label="mediterranean"> mediterranean</option>
  <option label="african"> african</option>
  <option label="no carbs"> no carbs</option>
  <option label="gluten free"> gluten free</option>
  <option label="pescatarian"> pescatarian</option>
  <option label="sweets"> sweets</option>
  <option label="latinomerican"> latinomerican</option>
  <option label="asian"> asian</option>
   <!--<input type="text" name="instructions" value="{{user.foodPreferences}}" />-->

</select> 
  <br />

   <br />
  <label for="recipesmade"> Your recipes:</label>
  <input type="text" name="recipesmade" value="{{user.recipesMade}}" />
  <br />

  <label for="image"> Image:</label>
  <input type="file" name="imageUrl" />
  <br />
  <button type="submit"> <a href="/profile"> Confirm </a></button>
  <br />
  <a href="/profile">Go back</a>

{{#each user.user}}
<option value="{{_id}}"> {{username}}</option>
<option value="{{_email}}"> {{email}}</option>
<option value="{{_password}}"> {{password}}</option>
<option value="{{_recipesmade}}"> {{recipesmade}}</option>
{{/each}}


<button type="submit">
    <a href="/auth/logout">Log out</a>
</button>
</form>

