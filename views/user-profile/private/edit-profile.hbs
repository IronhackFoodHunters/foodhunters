<h2>Edit your profile</h2>

<form action="/profile/{{_user.id}}edit" method="POST">

  <label for="username"> Username:</label>
  <input type="text" name="title" value="{{user.username}}" />
 
  <br />
  <label for="email"> Email:</label>
  <input type="text" name="instructions" value="{{user.email}}" />
  <br />

  <br />
  <label for="password"> Password:</label>
  <input type="text" name="genre" value="{{user.password}}" />

  <br />
  <label for="foodpreferences"> What you like to eat:</label>
  <input type="text" name="instructions" value="{{user.foodPreferences}}" />
  <br />

   <br />
  <label for="recipesmade"> Your recipes:</label>
  <input type="text" name="recipesmade" value="{{user.recipesMade}}" />
  <br />

  <label for="image"> Image:</label>
  <input type="file" name="imageUrl" />
  <br />
  <button type="submit">Confirm</button>
  <br />
  <a href="/profile">Go back</a>
</form>