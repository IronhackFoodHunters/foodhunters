<h2>Edit the recipe</h2>

<form action="/profile/{{_user.id}}edit" method="POST">

    <label for="title"> Title:</label>
    <input type="text" name="title" value="{{recipe.title}}">
<br>
    <label for="description"> Description:</label>
    <input type="text" name="genre" value="{{recipe.description}}">
<br>
    <label for="instructions"> Instructions:</label>
    <input type="text" name="instructions" value="{{recipe.instructions}}">
<br>
    <label for="image"> Image:</label>
      <input type="file" name="imageUrl"/>
    <br>    
    <button type="submit">Confirm</button>
    <br>
    <a href="/homepage">Go back</a>
</form>