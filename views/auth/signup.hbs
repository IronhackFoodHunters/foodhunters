    <div id="form">
  <h2>Signup</h2>
  <form action="/auth/signup" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Email
      <input type="email" name="email" placeholder="myAss@ironhack.com" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

<fieldset action="send" mulitple>
      <input type="checkbox" id="omnivorous" name="omnivorous">
      <label for="omnivorous">omnivorous</label>
 
      <input type="checkbox" id="vegatarian" name="vegatarian">
      <label for="vegatarian">vegatarian</label>
  
      <input type="checkbox" id="vegan" name="vegan">
      <label for="vegan">vegan</label>

     
      <input type="checkbox" id="no carbs" name="no carbs">
      <label for="no carbs">no carbs</label>
   

      <input type="checkbox" id="gluten free" name="gluten free">
      <label for="gluten free">gluten free</label>
  
 
      <input type="checkbox" id="pescatarian" name="pescatarian">
      <label for="pescatarian">pescatarian</label>
  

      <input type="checkbox" id="sweets" name="sweets">
      <label for="sweets"> sweets</label>
    
      <input type="checkbox" id="drinks" name="drinks">
      <label for="drinks">drinks</label>
 

      <input type="checkbox" id="mediterranean" name="mediterranean">
      <label for="mediterranean">mediterranean</label>
  

      <input type="checkbox" id="asian" name="asian">
      <label for="asian">asian</label>


      <input type="checkbox" id="african" name="african">
      <label for="african">african</label>
   
      <input type="checkbox" id="latinomerican" name="latinomerican">
      <label for="latinomerican">latinomerican</label>
  

</fieldset>


    <button type="submit">Create account</button>

  </form>

      {{#if errorMessage}}
    <p>There was a problem: {{errorMessage}}</p>
    {{/if}}

</div>